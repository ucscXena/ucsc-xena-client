%table
    %colgroup
      %col{class:'valueCol'}
      %col{class:'closeCol'}

    - if (sampleID) {
      %tr
        %td{class: 'sampleID'} = sampleID
    - _.each(rows, function(r, i) {
      %tr
        - if (r.label && r.val)  {
          %td
            = r.label+" : "
            %span{class: 'tupleValue'} = r.val
        - } else if (r.val) {
          - if (r.url) {
              %td{class: 'urlValue'}
                %a{href: r.url, target: '_BLANK'} =r.val
          - } else {
              %td{class: 'tupleValue'} = r.val
          - }
        - } else if (r.label) {
          %td = r.label
        - }
    %tr
      %td{id:'tooltipPrompt', class:'tooltipPrompt'}
